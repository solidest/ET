<ei:ETPage x:Class="ET.Main.DocTree.DocTreePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ET.Main.DocTree"
             xmlns:ei="clr-namespace:ET.Interface;assembly=ModuleInterface"
             xmlns:tree="clr-namespace:ICSharpCode.TreeView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Name="gridMain">
        <tree:SharpTreeView x:Name="trMain">

            <tree:SharpTreeView.ContextMenu>
                <ContextMenu Name="contextMenu">
                    <MenuItem Header="添加"   Command="ApplicationCommands.New" CommandParameter="NewModuleFile"/>
                    <MenuItem Header="剪切"   Command="ApplicationCommands.Cut"/>
                    <MenuItem Header="复制"   Command="ApplicationCommands.Copy"/>
                    <MenuItem Header="粘贴"   Command="ApplicationCommands.Paste"/>
                    <MenuItem Header="删除"  Command="ApplicationCommands.Delete"/>
                    <MenuItem Header="重命名" />
                </ContextMenu>
            </tree:SharpTreeView.ContextMenu>

            <tree:SharpTreeView.CommandBindings>
                <CommandBinding Command="ApplicationCommands.New" Executed="DoNewModuleFile" CanExecute="CanNewModuleFile"/>
                <!--<CommandBinding Command="ApplicationCommands.Open" Executed="DoOpenDoc"/>
                <CommandBinding Command="ApplicationCommands.Save" CanExecute="CanSaveDoc" Executed="DoSaveDoc" />
                <CommandBinding Command="ApplicationCommands.SaveAs" CanExecute="CanSaveAll" Executed="DoSaveAll" />-->
            </tree:SharpTreeView.CommandBindings>

        </tree:SharpTreeView>
            
    </Grid>
</ei:ETPage>
